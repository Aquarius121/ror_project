<div class="popup-get-premium-form ">
  <div class="credit-cart-info">
    <span class="cc-title">Coupon</span>
    <input class="long" name="coupon" type="text" />
  </div>
  <div class="credit-cart-info">
    <span class="cc-title">Name on Card</span>
    <input class="long" name="customer" type="text" <%= customer.blank? ? '' : "value=#{customer.join(' ')}"%> />
  </div>
  <div class="credit-cart-info">
    <span class="cc-title">Card Number</span>
    <input class="long" name="card-num" type="text" <%= card_num.blank? ? '' : "value=#{card_num}"%> />
  </div>
  <div class="credit-cart-info">
    <div class="credit-cart-info-date">
      <span class="cc-title">Expiration date</span>
      <input class="short" maxLength="2" name="month" type="text" <%= expiration.blank? ? '' : "value=#{expiration[0..1]}" %> />
      <span>/</span>
      <input class="short" maxLength="2" name="year" type="text" <%= expiration.blank? ? '' : "value=#{expiration[2..3]}" %> />
    </div>
    <div class="cc-cvv">
      <span class="cc-title">CVV</span>
      <input class="short" maxLength="5" name="cvv" type="text" <%= cvv.blank? ? '' : "value=#{cvv}" %> />
    </div>
  </div>
</div>
