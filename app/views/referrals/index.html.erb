<%= stylesheet_link_tag "admin_table" %>

<h2>Listing referrals</h2>

<table class="table table-striped" style="font-size: 14px;">
  <thead>
    <tr>
      <th>User</th>
      <th>Referral</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @referrals.each do |referral| %>
      <tr>
        <td><%= referral.user.full_name rescue '-' %></td>
        <td><%= referral.referral.full_name rescue '-' %></td>
        <td><%= link_to 'Show', referral %></td>
        <td><%= link_to 'Edit', edit_referral_path(referral) %></td>
        <td><%= link_to 'Destroy', referral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Referral', new_referral_path %>
